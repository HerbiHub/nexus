{
  "openapi": "3.0.0",
  "info": {
    "version": "0.0.1",
    "title": "Nexus",
    "license": {
      "name": "GPLv3.0"
    }
  },
  "servers": [
    {
      "url": "http://example.com"
    }
  ],
  "paths": {
    "/controllers": {
      "get": {
        "summary": "List all controllers",
        "tags": [
          "controller"
        ],
        "responses": {
          "200": {
            "description": "A list of controllers"
          }
        }
      }
    },
    "/controller/{address}":{
      "get": {
        "summary": "List specific controller",
        "tags": [
          "controller"
        ],
        "parameters": [
          {
            "name": "address",
            "in": "path",
            "required": true,
            "description": "Address of the controller to access",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Information on the controller"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Controller": {
        "required": [
          "id",
          "name"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "address": {
            "type": "string",
            "maximum": 4
          }
        }
      },
      "Controllers": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Controller"
        }
      },
      "Error": {
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
    }
  }
}